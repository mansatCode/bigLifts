<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BigLifts" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryDarkColor</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/primaryDarkColor</item>
        <!-- Customize your theme here. -->
        <item name="popupMenuStyle">@style/style_PopUpMenu_default</item>
    </style>

    <style name="style_PopUpMenu_default" parent="Widget.AppCompat.PopupMenu">
        <item name="android:popupBackground">@color/primaryLightColor</item>
        <item name="android:overlapAnchor">true</item>
        <item name="android:dropDownHorizontalOffset">0dp</item>
        <item name="android:dropDownVerticalOffset">0dp</item>
    </style>

    <style name="style_NumberPicker" parent="Theme.AppCompat.Light.NoActionBar" >
        <item name="android:textColorPrimary">@android:color/white</item>
    </style>

    <style name="chip_style" >
        <item name="android:layout_width">96dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textAlignment">center</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="checkedIconVisible">true</item>
        <item name="android:checkable">true</item>
    </style>
</resources>