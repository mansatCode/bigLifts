<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primaryDarkColor">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.github.mikephil.charting.charts.ScatterChart
            android:id="@+id/fragment_exercise_progress_mpsc_scatterChart"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="32dp"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:gravity="top"
            android:rotation="-90"
            android:text="Weight / kg "
            android:textColor="@color/white"
            android:textSize="12dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/fragment_exercise_progress_mpsc_scatterChart"
            app:layout_constraintLeft_toRightOf="@id/fragment_exercise_progress_mpsc_scatterChart"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/fragment_exercise_progress_mpsc_scatterChart" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date"
            android:textColor="@color/white"
            android:textSize="12dp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="@id/fragment_exercise_progress_mpsc_scatterChart"
            app:layout_constraintRight_toRightOf="@id/fragment_exercise_progress_mpsc_scatterChart"
            app:layout_constraintTop_toBottomOf="@id/fragment_exercise_progress_mpsc_scatterChart" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</FrameLayout>