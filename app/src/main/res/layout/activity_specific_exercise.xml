<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/activity_specific_exercise_abl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/activity_specific_exercise_tb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/primaryDarkColor"
            android:minHeight="?attr/actionBarSize"
            app:title="Exercise Name"
            app:titleTextColor="@color/white" />

    </com.google.android.material.appbar.AppBarLayout>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/activity_specific_exercise_tbl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/activity_specific_exercise_abl"
        android:background="@drawable/bg_exercise"
        app:tabIndicatorColor="@color/primaryLightColor"
        app:tabSelectedTextColor="@color/primaryLightColor"
        app:tabTextColor="@color/white" />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/activity_specific_exercise_vp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/activity_specific_exercise_tbl"
        android:background="@color/primaryDarkColor" />

</RelativeLayout>